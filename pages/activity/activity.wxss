page{
  background-color: #fff; 
}
.header { 
  position: relative; 
  height:300rpx; 
  display: flex;
  flex-direction: column;
  justify-content: start;
  align-items: center;
  z-index: 2;
}
.bg_ware {
  position: absolute;
  left: 0;
  bottom: 0;
  width: 100%;
  mix-blend-mode: screen;
  z-index: -1;
}

.top{
  width: 700rpx;
  height: 180rpx;
  border-radius: 15rpx;
  margin-top: 10rpx;
  position: absolute;
  z-index: 1;
}
.introduce{
  display: flex;
  height: 160rpx;
  flex-direction: row;
  justify-content:start;
  align-items: center;
}
.introduce image{
  width: 110rpx;
  height: 110rpx;
  border-radius: 50%;
  margin-left: 80rpx;
  margin-right: 10rpx;
}
.about{
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: start;
  margin-left: 20rpx;
}
.userName{
  font-size:35rpx;
  font-weight: bolder;
  color:white;
  margin-bottom: 10rpx;
}
.brief{
  font-size: 25rpx;
  font-weight:bold;
  color: #c9c9c9;
  width: 300rpx;
  height: 32rpx;
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
}

.middle{
  display: flex;
  position: absolute;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  margin: -80rpx 35rpx 0rpx 35rpx;
  border: 0rpx solid #c9c9c9;
  border-radius: 20rpx;
  z-index: 2;
  box-shadow: 0 0 2px 1px #E0E3DA;
  /* opacity: 0.9; */
}
.integral{
  width: 680rpx;
  height:130rpx ;
  box-shadow: 0 0 1px 1px #E0E3DA;
  border-radius: 10rpx;
  background-color: white;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
}
.title{
  display: flex;
  flex-direction: row;
  justify-content: center;
  width: 300rpx;
  height: 130rpx;
  line-height: 130rpx;
}
.title view,.Num{
  font-weight: bolder;
  margin-left: 20rpx;
}
.Num{
  width: 300rpx;
  height: 130rpx;
  line-height: 130rpx;
  text-align: center;
}
.logDetail{
  width: 720rpx;
  margin: auto;
  margin-top: 100rpx;
}
.DetailInfo{
  width: 700rpx;
}
.InfoItem{
  width: 700rpx;
  height: 120rpx;
  box-shadow: 0 0 1px 1px #E0E3DA;
  border-radius: 10rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}

.DetailTitle{
  width: 300rpx;
  height: 120rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: flex-start;
  margin-left:30rpx;
}
.name{
  font-weight: bolder;
  color: black;
  font-size: 26rpx;
  width: 350rpx;
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
}
.time{
  font-weight:normal;
  color: rgb(163, 163, 163);
  font-size: 22rpx;
  margin-top: 10rpx;
}
.Status{
  line-height: 50rpx;
  font-weight: bolder;
  color:white;
  font-size: 25rpx;
  height:50rpx;
  width: 150rpx;
  text-align: start;
  /* border: 1rpx solid #c9c9c9; */
  border-radius: 10rpx;
  text-align: center;
  margin-right: 20rpx;
}
/* 报名开始 */
.SignStart{
  background-color: #4abdac;
}
/* 活动未开始 */
.ActiveNoStart{
  background-color: #F78733;
}
/* 活动进行中 */
.ActiveStart{
  background-color: #fc4a1a;
}
/* 活动已结束 */
.ActiveEnd{
  background-color: #DFDCE3;
}

